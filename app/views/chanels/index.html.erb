<h1 class="title is-2">Channels</h1>

<div class="level">
  <div class="level-left"></div>
  <div class="level-right">
    <%= link_to 'New channel', new_chanel_path, class: 'button is-dark' %>
  </div>
</div>

<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Channel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chanels.each do |chanel| %>
      <tr>
        <td><%= link_to chanel.chanel, chanel %></td>
        <td>
          <div class="buttons is-right">
            <%= link_to 'View channel', chanel, class: 'button' %>
            <%= link_to 'Edit channel', edit_chanel_path(chanel), class: 'button' %>
            <%= link_to 'Delete channel', chanel, class: 'button is-danger', data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this channel?'} %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>